<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hometab_lostrecycler_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목 :" />

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="종 : " />

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성별/나이 : " />

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지역 : " />

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="실종날짜 : " />

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="실종장소 : " />

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="특징 : " />

            <TextView
                android:id="@+id/tv_hometab_lostrecycler_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연락처 : " />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>