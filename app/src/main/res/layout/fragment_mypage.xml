<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ui.mypage.MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 프로필 섹션 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/icon_profile_pic"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="4dp" /> <!-- 여백 추가 -->

            <TextView
                android:id="@+id/change_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 사진 변경"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="14sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" /> <!-- 여백 추가 -->

            <TextView
                android:id="@+id/text_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심지역 | "
                android:textSize="14sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" /> <!-- 여백 추가 -->

            <TextView
                android:id="@+id/text_dogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려견 | "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_cats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려묘 | "
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:outlineProvider="background">

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="개인정보 수정"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/black"
            android:elevation="4dp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FFFEE6"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btn_edit_pet_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="반려동물 정보 수정"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:elevation="4dp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FFFEE6"
            android:paddingVertical="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_my_missing_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="나의 실종 신고"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:elevation="4dp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FFFEE6"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btn_my_sighting_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="나의 목격 신고"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:elevation="4dp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FFFEE6"
            android:paddingVertical="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_faq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="자주하는 질문"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:elevation="4dp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FFFEE6"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btn_contact_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="문의하기"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:elevation="4dp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FFFEE6"
            android:paddingVertical="12dp" />

    </LinearLayout>

</LinearLayout>