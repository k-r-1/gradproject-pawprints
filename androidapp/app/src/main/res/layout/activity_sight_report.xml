<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context="ui.home.SightReportActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/primary_pink"
      android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="8dp"
        android:background="@color/primary_pink">

      <ImageView
          android:id="@+id/icon_back"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/icon_back"
          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:layout_gravity="start" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="목격 신고"
          android:textColor="@android:color/black"
          android:textSize="17sp" />

    </androidx.appcompat.widget.Toolbar>
  </com.google.android.material.appbar.AppBarLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="15dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

          <LinearLayout
              android:id="@+id/pet_info_section"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:padding="20dp" >

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="2dp">

              <FrameLayout
                  android:id="@+id/image_section"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                <!-- 이미지를 표시할 ImageView -->
                <ImageView
                    android:id="@+id/selected_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:visibility="gone" /> <!-- 초기에는 이미지가 숨겨져 있음 -->

                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:contentDescription="Camera Icon"
                    android:src="@drawable/twotone_add_a_photo_24"
                    />

              </FrameLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/image_upload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 업로드"
                android:textSize="10sp"
                android:textStyle="bold"
                android:stateListAnimator="@null"
                android:backgroundTint="#FA796E"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="0dp"
                android:minWidth="60dp"
                android:minHeight="30dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"> <!-- 여백 추가 -->

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="• 이름"
                  android:textColor="@color/black"
                  android:textSize="17sp"
                  android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->


              <EditText
                  android:id="@+id/pet_name_edit_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:inputType="text"
                  android:background="@drawable/edit_background"
                  android:padding="8dp"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"> <!-- 여백 추가 -->

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="• 종류"
                  android:textColor="@color/black"
                  android:textSize="17sp"
                  android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

<!--              <TextView-->
<!--                  android:id="@+id/pet_type_text_view"-->
<!--                  android:layout_width="0dp"-->
<!--                  android:layout_height="wrap_content"-->
<!--                  android:layout_weight="1"-->
<!--                  android:textSize="16sp"-->
<!--                  android:background="@drawable/edit_background"-->
<!--                  android:padding="8dp"/>-->

              <Spinner
                  android:id="@+id/pet_type_spinner"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:background="@drawable/edit_background"
                  android:padding="8dp"
                  /> <!-- 스피너 배경 추가 및 여백 조정 -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"> <!-- 여백 추가 -->

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="• 품종"
                  android:textColor="@color/black"
                  android:textSize="17sp"
                  android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

<!--              <TextView-->
<!--                  android:id="@+id/pet_breed_text_view"-->
<!--                  android:layout_width="0dp"-->
<!--                  android:layout_height="wrap_content"-->
<!--                  android:layout_weight="1"-->
<!--                  android:textSize="16sp"-->
<!--                  android:background="@drawable/edit_background"-->
<!--                  android:padding="8dp"/>-->

              <Spinner
                  android:id="@+id/pet_breed_spinner"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:background="@drawable/edit_background"
                  android:padding="8dp"
                  /> <!-- 스피너 배경 추가 및 여백 조정 -->

              <EditText
                  android:id="@+id/pet_breed_edit_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:inputType="text"
                  android:background="@drawable/edit_background"
                  android:padding="8dp"
                  android:visibility="gone"/>

              <Button
                  android:id="@+id/reset_breed_button"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="재설정"
                  android:backgroundTint="#D86359"
                  app:cornerRadius="20dp"
                  android:stateListAnimator="@null"
                  android:padding="0dp"
                  android:minWidth="60dp"
                  android:minHeight="50dp"
                  android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"> <!-- 여백 추가 -->

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="• 지역"
                  android:textColor="@color/black"
                  android:textSize="17sp"
                  android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

              <EditText
                  android:id="@+id/pet_area_edit_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:inputType="text"
                  android:background="@drawable/edit_background"
                  android:padding="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"> <!-- 여백 추가 -->

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="• 날짜"
                  android:textColor="@color/black"
                  android:textSize="17sp"
                  android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

              <EditText
                  android:id="@+id/pet_date_edit_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:hint="발견하신 날짜를 입력해 주세요."
                  android:inputType="text"
                  android:background="@drawable/edit_background"
                  android:padding="8dp"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"> <!-- 여백 추가 -->

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="• 장소"
                  android:textColor="@color/black"
                  android:textSize="17sp"
                  android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

              <EditText
                  android:id="@+id/pet_location_edit_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:inputType="text"
                  android:hint="발견하신 장소를 입력해 주세요."
                  android:background="@drawable/edit_background"
                  android:padding="8dp"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"> <!-- 여백 추가 -->

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="• 설명"
                  android:textColor="@color/black"
                  android:textSize="17sp"
                  android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

              <EditText
                  android:id="@+id/pet_feature_edit_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:background="@drawable/edit_background"
                  android:padding="8dp"
                  android:maxLines="10"
                  android:inputType="textMultiLine" />

            </LinearLayout>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>


      <Button
          android:id="@+id/save_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="등록"
          android:textSize="16sp"
          android:backgroundTint="@color/deep_pink"
          android:stateListAnimator="@null"
          android:textStyle="bold"
          android:layout_marginTop="10dp"
          app:cornerRadius="30dp"
          android:layout_gravity="center"
          />

    </LinearLayout>

    </ScrollView>

</LinearLayout>

