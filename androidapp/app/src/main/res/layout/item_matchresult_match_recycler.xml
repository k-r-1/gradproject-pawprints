<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/background_card"
    android:layout_margin="20dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/iv_matchresult_recycler_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#EFEFEF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_title_fix"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="제목"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_breed_fix"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="종"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_area_fix"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="지역"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_date_fix"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="발견날짜"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal"-->
<!--            android:layout_marginBottom="5dp">-->

<!--            <TextView-->
<!--                android:id="@+id/tv_matchresult_recycler_location_fix"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="end"-->
<!--                android:text="발견장소"-->
<!--                android:textSize="14sp"-->
<!--                android:layout_marginEnd="5dp" />-->

<!--            <TextView-->
<!--                android:id="@+id/tv_matchresult_recycler_location"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/edit_background"-->
<!--                android:padding="5dp"-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="@color/black" />-->
<!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_feature_fix"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="설명"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
