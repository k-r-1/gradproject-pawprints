<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_card"
    android:layout_marginBottom="15dp"
    android:elevation="3dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:ignore="MissingConstraints">

    <!-- FrameLayout으로 감싸서 이미지 바깥에 흰색 테두리와 그림자 추가 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 바깥쪽테두리와 그림자 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_image_shadow" />

        <!-- 실제 이미지 -->
        <ImageView
            android:id="@+id/iv_matchresult_recycler_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner"
            tools:srcCompat="@tools:sample/avatars" />

    </FrameLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/background_gray" />

    <!-- Text fields with redesigned layout and spacing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_title_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 제목"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_breed_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 종"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_breed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_area_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 지역"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_date_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 발견일"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_location_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 발견지"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_matchresult_recycler_feature_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 설명"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/tv_matchresult_recycler_feature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>

