<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.mypage.EditPetInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 반려동물"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/pet_list_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/pet_list_section_bg"
            android:gravity="center"
            android:layout_margin="15dp"
            android:padding="10dp"> <!-- 여백 추가 -->

            <!-- 여기에 반려동물을 추가할 수 있습니다 -->

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보를 수정할 반려동물을 선택해 주세요."
            android:textColor="@color/deep_pink"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"> <!-- 여백 조정 -->

            <ImageView
                android:id="@+id/pet_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Pet Image"
                android:src="@drawable/twotone_add_a_photo_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="15dp"> <!-- 여백 조정 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"> <!-- 여백 추가 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                    <EditText
                        android:id="@+id/pet_name_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종류"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                    <Spinner
                        android:id="@+id/pet_type_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"/> <!-- 스피너 배경 추가 및 여백 조정 -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="품종"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                    <Spinner
                        android:id="@+id/pet_breed_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"/> <!-- 스피너 배경 추가 및 여백 조정 -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나이"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                    <EditText
                        android:id="@+id/pet_age_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"/> <!-- EditText 배경 추가 및 여백 조정 -->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="성별"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                    <Spinner
                        android:id="@+id/pet_gender_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"/> <!-- 스피너 배경 추가 및 여백 조정 -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="색깔"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                    <EditText
                        android:id="@+id/pet_color_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"/> <!-- EditText 배경 추가 및 여백 조정 -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="특징"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                    <EditText
                        android:id="@+id/pet_feature_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"/> <!-- EditText 배경 추가 및 여백 조정 -->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/deep_pink"
            app:cornerRadius="30dp"
            android:textSize="23sp"
            android:text="완료"
            android:layout_marginTop="16dp"/> <!-- 여백 조정 -->

    </LinearLayout>

</ScrollView>
