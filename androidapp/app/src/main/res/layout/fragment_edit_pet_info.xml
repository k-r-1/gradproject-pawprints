<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.mypage.EditPetInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 반려동물"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:drawablePadding="5dp"
            android:layout_margin="15dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/pet_list_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"> <!-- 여백 추가 -->

                <!-- 여기에 반려동물을 추가할 수 있습니다 -->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 정보를 수정할 반려동물을 선택해 주세요."
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"/>

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 반려동물 등록"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_add"
            android:stateListAnimator="@null"
            android:backgroundTint="#F68562"
            android:layout_marginTop="15dp"
            app:cornerRadius="30dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/pet_info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"> <!-- 여백 추가 -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 이름"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/pet_name_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"/>

                        <EditText
                            android:id="@+id/pet_name_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 종류"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/pet_type_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"/>

                        <Spinner
                            android:id="@+id/pet_type_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"/> <!-- 스피너 배경 추가 및 여백 조정 -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 품종"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/pet_breed_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"/>

                        <Spinner
                            android:id="@+id/pet_breed_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"/> <!-- 스피너 배경 추가 및 여백 조정 -->

                        <EditText
                            android:id="@+id/pet_breed_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"/>

                        <Button
                            android:id="@+id/reset_breed_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="재설정"
                            android:backgroundTint="#D86359"
                            app:cornerRadius="20dp"
                            android:stateListAnimator="@null"
                            android:padding="0dp"
                            android:minWidth="60dp"
                            android:minHeight="50dp"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 나이"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/pet_age_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"/>

                        <EditText
                            android:id="@+id/pet_age_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"/> <!-- EditText 배경 추가 및 여백 조정 -->


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 성별"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/pet_gender_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"/>

                        <Spinner
                            android:id="@+id/pet_gender_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"/> <!-- 스피너 배경 추가 및 여백 조정 -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 색깔"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/pet_color_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"/>

                        <EditText
                            android:id="@+id/pet_color_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"/> <!-- EditText 배경 추가 및 여백 조정 -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"> <!-- 여백 추가 -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 특징"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/pet_feature_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:maxLines="10"
                            android:scrollHorizontally="false"/>

                        <EditText
                            android:id="@+id/pet_feature_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:inputType="textMultiLine"
                            android:background="@drawable/edit_background"
                            android:padding="8dp"
                            android:visibility="gone"
                            android:lines="5"
                            android:maxLines="10"
                            android:scrollHorizontally="false"/>


                    </LinearLayout>

                    <!-- 등록 및 삭제 버튼 추가 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/edit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수정"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:stateListAnimator="@null"
                            android:backgroundTint="#D86359"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            android:minWidth="50dp"
                            android:minHeight="40dp"
                            android:visibility="gone"/>

                        <Button
                            android:id="@+id/delete_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="삭제"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:stateListAnimator="@null"
                            android:backgroundTint="#D86359"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            android:minWidth="50dp"
                            android:minHeight="40dp"
                            android:visibility="gone"/>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="16sp"
            android:backgroundTint="@color/deep_pink"
            android:stateListAnimator="@null"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:cornerRadius="30dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            android:textSize="16sp"
            android:backgroundTint="@color/deep_pink"
            android:stateListAnimator="@null"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:cornerRadius="30dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
