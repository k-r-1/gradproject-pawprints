<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true"
    tools:context=".ui.mypage.EditSightReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/background_card"
        android:layout_margin="15dp"
        android:elevation="2dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        tools:ignore="MissingConstraints">

        <!-- FrameLayout으로 감싸서 이미지 바깥에 흰색 테두리와 그림자 추가 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <!-- 바깥쪽 테두리와 그림자 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_image_shadow" />

            <!-- 실제 이미지 -->
            <ImageView
                android:id="@+id/iv_edit_sightrecycler_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corner"
                tools:srcCompat="@tools:sample/avatars" />
        </FrameLayout>

        <Button
            android:id="@+id/image_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FA796E"
            android:minWidth="60dp"
            android:minHeight="30dp"
            android:padding="0dp"
            android:stateListAnimator="@null"
            android:text="사진 수정"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etv_edit_sightrecycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="제목"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background_gray" />

        <!-- 텍스트 필드와 레이아웃 조정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:gravity="start">

            <!-- 종 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_edit_sightrecycler_breed_fix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="• 종"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/edit_sightrecycler_breed_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/edit_background"
                    android:padding="8dp" /> <!-- 스피너 배경 추가 및 여백 조정 -->

                <EditText
                    android:id="@+id/tv_edit_sightrecycler_breed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_background"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 지역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"> <!-- 여백 추가 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_edit_sightrecycler_area_fix"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="• 지역"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_edit_sightrecycler_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/edit_background"
                        android:padding="8dp"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_edit_sightrecycler_area_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:drawableRight="@drawable/ic_next"
                    android:inputType="text"
                    android:padding="8dp"
                    android:text="지도에서 선택하기"
                    android:textColor="@color/deep_pink"
                    android:textSize="16sp"
                    android:textStyle="bold" /> <!-- 위쪽 여백 추가 -->
            </LinearLayout>

            <!-- 발견 날짜 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/tv_edit_sightrecycler_date_fix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="• 발견일"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/gray" />
                <TextView
                    android:id="@+id/tv_edit_sightrecycler_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:background="@drawable/edit_background"
                    android:textColor="@color/primaryTextColor" />
            </LinearLayout>

            <!-- 발견 장소 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/tv_edit_sightrecycler_location_fix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="• 발견지"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/gray" />
                <EditText
                    android:id="@+id/tv_edit_sightrecycler_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:background="@drawable/edit_background"
                    android:textColor="@color/primaryTextColor" />
            </LinearLayout>

            <!-- 특징 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/tv_edit_sightrecycler_feature_fix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="• 특징"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/gray" />
                <EditText
                    android:id="@+id/tv_edit_sightrecycler_feature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:background="@drawable/edit_background"
                    android:textColor="@color/primaryTextColor" />
            </LinearLayout>

            <!-- 연락처 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/tv_edit_sightrecycler_contact_fix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="• 연락처"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/gray" />

                <EditText
                    android:id="@+id/tv_edit_sightrecycler_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/edit_background"
                    android:padding="8dp"
                    android:text="연락처가 없습니다."
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDeleteSightReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/very_light_pink"
                    android:text="삭  제"
                    android:textColor="@color/black"
                    app:strokeColor="#000000" />

                <Button
                    android:id="@+id/btnEditSightReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/deep_pink"
                    android:singleLine="false"
                    android:text="수  정"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:strokeColor="#00000000" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
