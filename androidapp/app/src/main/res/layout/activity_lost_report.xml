<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ui.home.LostReportActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_pink"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="8dp"
            android:background="@color/primary_pink">

            <ImageView
                android:id="@+id/icon_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_back"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="실종 신고"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 반려동물"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/petListSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/loadingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="반려동물 정보를 가져오는 중입니다..."
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실종 신고할 반려동물을 선택해 주세요."
                android:textColor="@android:color/holo_red_dark"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*반려동물 정보 수정은 [내정보 -> 반려동물 관리]에서 진행해 주세요."
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@android:color/transparent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="15dp"
                >

                <LinearLayout
                    android:id="@+id/lostReportSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="실종 신고 정보"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#A6A6A6"
                        android:layout_marginBottom="10dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="2dp">

                        <FrameLayout
                            android:id="@+id/image_section"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- 이미지를 표시할 ImageView -->
                            <ImageView
                                android:id="@+id/selected_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:visibility="gone" /> <!-- 초기에는 이미지가 숨겨져 있음 -->

                            <ImageView
                                android:id="@+id/camera_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:contentDescription="Camera Icon"
                                android:src="@drawable/twotone_add_a_photo_24"
                                />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/image_upload_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사진 업로드"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:backgroundTint="#FA796E"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:padding="0dp"
                        android:minWidth="60dp"
                        android:minHeight="30dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="#EFEFEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 제목"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <EditText
                            android:id="@+id/lostReportTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 품종"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/lostReportBreed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="#787878"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 성별"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/lostReportGender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="#787878"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 나이"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/lostReportAge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_background"
                            android:textColor="#787878"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <!-- 지역과 선택된 주소가 한 줄에 위치하는 부분 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• 지역"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                            <TextView
                                android:id="@+id/pet_area_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:inputType="textMultiLine"
                                android:hint="실종된 곳을 지도에서 선택해 주세요."
                                android:background="@drawable/edit_background"
                                android:padding="5dp"
                                android:scrollHorizontally="false" /> <!-- 가로 스크롤 비활성화 -->

                        </LinearLayout>

                        <!-- 지역 선택하기 버튼이 아래에 위치하는 부분 -->
                        <TextView
                            android:id="@+id/pet_area_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지도에서 선택하기"
                            android:textColor="@color/deep_pink"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:inputType="text"
                            android:drawableRight="@drawable/ic_next"
                            android:padding="8dp"
                            android:layout_marginTop="4dp" /> <!-- 위쪽 여백 추가 -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 날짜"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <EditText
                            android:id="@+id/lostReportDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="실종된 날짜를 입력해 주세요."
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 장소"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <EditText
                            android:id="@+id/lostReportLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="실종된 상세 장소를 설명해 주세요.\n(ex. OO공원 분수대 근처)"
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 특징"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <TextView
                            android:id="@+id/lostReportFeature"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="#787878"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 설명"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <EditText
                            android:id="@+id/lostReportDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:maxLines="10"
                            android:scrollHorizontally="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 연락처"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_marginEnd="8dp"/> <!-- 여백 조정 -->

                        <EditText
                            android:id="@+id/lostReportContact"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/edit_background"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/reportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고하기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/deep_pink"
                android:stateListAnimator="@null"
                android:layout_marginTop="10dp"
                app:cornerRadius="30dp"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
