<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/background_card"
    android:layout_margin="15dp"
    android:elevation="2dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:ignore="MissingConstraints">

    <!-- FrameLayout으로 감싸서 이미지 바깥에 흰색 테두리와 그림자 추가 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 바깥쪽 테두리와 그림자 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_image_shadow" />

        <!-- 실제 이미지 -->
        <ImageView
            android:id="@+id/iv_hometab_lostrecycler_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner"
            tools:srcCompat="@tools:sample/avatars" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_hometab_lostrecycler_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="제목"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/background_gray" />

    <!-- 텍스트 필드와 레이아웃 조정 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:gravity="start">


        <!-- 종 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_breed_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 종"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_breed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <!-- 성별/나이 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_gender_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 성별/나이"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <!-- 지역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_area_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 지역"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <!-- 실종 날짜 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_date_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 실종일"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <!-- 실종 장소 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_location_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 실종지"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <!-- 특징 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_feature_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 특징"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_feature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <!-- 설명 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_description_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 설명"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

        <!-- 연락처 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_contact_fix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="• 연락처"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/tv_hometab_lostrecycler_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="8dp"
                android:textSize="16sp"
                android:background="@drawable/edit_background"
                android:textColor="@color/primaryTextColor" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
