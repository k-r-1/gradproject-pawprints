<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hometab_lostrecycler_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_title_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="제목" />

                <TextView
                    android:id="@+id/tv_homtab_lostrecycler_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="흰둥이" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_breed_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="종" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="말티즈" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_gender_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="성별/나이" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여자 / 8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_area_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="지역" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울시 노원구" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_date_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="실종날짜" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024.05.17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_location_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="실종장소" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="화랑대역 앞" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_feature_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="특징" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_feature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="배 쪽에 점이 있음." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_description_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="설명" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="빨간 목줄을 하고 있음." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_contact_fix"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="연락처" />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_line9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/tv_hometab_lostrecycler_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="010-1111-2222" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D1BDC0" />

</LinearLayout>