<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ui.mypage.MypageFragment"
    android:padding="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mypage_rounded_bg"
        android:layout_margin="10dp"
        android:padding="30dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님"
                android:textSize="25sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 확인 및 수정"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/ic_edit_profile"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1B1B1" />

            <Button
                android:id="@+id/btn_edit_pet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="반려동물 확인 및 수정"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/ic_edit_pet_info"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1B1B1" />

            <Button
                android:id="@+id/btn_my_missing_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="나의 실종 신고"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/ic_report"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1B1B1" />

            <Button
                android:id="@+id/btn_my_sighting_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="나의 목격 신고"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/ic_report"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1B1B1" />

            <Button
                android:id="@+id/btn_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="자주하는 질문"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/ic_faq"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1B1B1" />

            <Button
                android:id="@+id/btn_contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="문의하기"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:drawableLeft="@drawable/ic_qna"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1B1B1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="3dp">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btn_delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원탈퇴"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
